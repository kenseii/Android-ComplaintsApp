<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/unnamed"
    tools:context="phoenix.iitdcomplaints.NewComplaint">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar2" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/textViewItemTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add a new user"
                android:textColor="@color/colorPrimary"
                android:textSize="30dp"
                android:textStyle="bold"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="60dp" />
            <View
                android:id="@+id/line"
                android:layout_width="fill_parent"
                android:layout_height="1.5dp"
                android:background="@color/colorPrimary"
                android:layout_below="@id/textViewItemTitle"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="5dp"/>
            <ImageButton
                android:id="@+id/image1"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/rounded_corner"
                android:alpha="0.4"
                android:layout_below="@+id/textViewItemTitle"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_above="@+id/first_name"/>
            <EditText
                android:id="@+id/username"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="Username"
                android:inputType="text"
                android:paddingTop="30dp"
                android:textColorHint="#8B4513"
                android:textColor="@color/colorPrimary"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_below="@+id/textViewItemTitle" />
            <ImageButton
                android:id="@+id/image2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_corner"
                android:alpha="0.4"
                android:layout_below="@+id/username"
                android:layout_above="@+id/last_name"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="20dp"/>
            <EditText
                android:id="@+id/first_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="First name"
                android:inputType="text"
                android:paddingTop="30dp"
                android:textColorHint="#8B4513"
                android:textColor="@color/colorPrimary"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_below="@+id/username" />
            <ImageButton
                android:id="@+id/image3"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/rounded_corner"
                android:alpha="0.4"
                android:layout_below="@+id/first_name"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_above="@+id/email"
                />

            <EditText
                android:id="@+id/last_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="Last name"
                android:inputType="text"
                android:paddingTop="30dp"
                android:textColorHint="#8B4513"
                android:textColor="@color/colorPrimary"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_below="@+id/first_name" />

            <ImageButton
                android:id="@+id/image4"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/rounded_corner"
                android:alpha="0.4"
                android:layout_below="@+id/last_name"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_above="@+id/entry_no"
                />

            <EditText
                android:id="@+id/email"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:inputType="text"
                android:paddingTop="30dp"
                android:textColorHint="#8B4513"
                android:textColor="@color/colorPrimary"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_below="@+id/last_name" />

            <ImageButton
                android:id="@+id/image5"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/rounded_corner"
                android:alpha="0.4"
                android:layout_below="@+id/email"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_above="@+id/password"/>
            <EditText
                android:id="@+id/entry_no"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="Entry number (if applicable)"
                android:inputType="text"
                android:paddingTop="30dp"
                android:textColorHint="#8B4513"
                android:textColor="@color/colorPrimary"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_below="@+id/email" />

            <ImageButton
                android:id="@+id/image6"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/rounded_corner"
                android:alpha="0.4"
                android:layout_below="@+id/entry_no"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_above="@+id/type"/>
            <EditText
                android:id="@+id/password"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:inputType="text"
                android:paddingTop="30dp"
                android:textColorHint="#8B4513"
                android:textColor="@color/colorPrimary"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_below="@+id/entry_no" />

            <ImageButton
                android:id="@+id/image7"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/rounded_corner"
                android:alpha="0.4"
                android:layout_below="@+id/password"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_above="@+id/por"/>


            <Spinner
                android:id="@+id/type"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:textColor="@color/colorPrimary"
                android:prompt="@string/Type"
                android:spinnerMode="dialog"
                android:layout_below="@+id/password" />

            <ImageButton
                android:id="@+id/image8"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/rounded_corner"
                android:alpha="0.4"
                android:layout_below="@+id/type"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_above="@+id/hostel"/>
            <EditText
                android:id="@+id/por"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="Position of Responsibility (if applicable)"
                android:inputType="text"
                android:paddingTop="30dp"
                android:textColorHint="#8B4513"
                android:textColor="@color/colorPrimary"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_below="@+id/type" />

            <ImageButton
                android:id="@+id/image9"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/rounded_corner"
                android:alpha="0.4"
                android:layout_below="@+id/por"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_above="@+id/submit_button"/>


            <Spinner
                android:id="@+id/hostel"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:prompt="@string/Hostel"
                android:spinnerMode="dialog"
                android:layout_below="@+id/por" />

            <ImageButton
                android:id="@+id/image10"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/rounded_corner"
                android:alpha="0.4"
                android:layout_below="@+id/hostel"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_above="@+id/submit_button"/>
            <Spinner
                android:id="@+id/special"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:prompt="@string/Special"
                android:spinnerMode="dialog"
                android:layout_below="@+id/hostel" />

            <Button android:id="@+id/submit_button"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="25dp"
                android:background="@drawable/rounded_corner"
                android:textColor="@color/textColorPrimary"
                android:alpha="0.75"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="196dp"
                android:text="Submit"
                android:layout_below="@+id/special"/>

        </RelativeLayout>
    </ScrollView>


</RelativeLayout>
